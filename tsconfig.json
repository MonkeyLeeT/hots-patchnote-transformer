{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "typeRoots" : ["./node_modules/@types", "./@types"]
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ]
}
